{
  "name": "@fewell/canvas-confetti-ts",
  "version": "1.0.0",
  "description": "A TypeScript-first fork of canvas-confetti with modern ES module support",
  "main": "dist/confetti.js",
  "module": "dist/confetti.module.mjs",
  "types": "dist/confetti.d.ts",
  "jsdelivr": "dist/confetti.browser.js",
  "scripts": {
    "build": "tsc && node build/build.js",
    "dev": "esbuild src/confetti.ts --bundle --outfile=dist/confetti.js --format=esm --watch --servedir=.",
    "test": "cd test && ava --verbose --serial",
    "lint": "eslint src/**/*.ts test/**/*.js build/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fewell/canvas-confetti-ts.git"
  },
  "keywords": [
    "canvas",
    "confetti",
    "typescript",
    "animation",
    "esm",
    "modules",
    "burst",
    "fireworks",
    "snow",
    "particles"
  ],
  "author": {
    "name": "fewell",
    "url": "https://github.com/fewell"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/fewell/canvas-confetti-ts/issues"
  },
  "homepage": "https://github.com/fewell/canvas-confetti-ts#readme",
  "devDependencies": {
    "@types/node": "^18.0.0",
    "ava": "2.4.0",
    "babel-eslint": "^8.2.1",
    "browserify": "^15.2.0",
    "cross-env": "^5.1.3",
    "esbuild": "^0.19.8",
    "eslint": "^6.8.0",
    "eslint-plugin-ava": "9.0.0",
    "jimp": "^0.2.28",
    "puppeteer": "^19.11.1",
    "rootrequire": "^1.0.0",
    "send": "^0.16.1",
    "terser": "^3.14.1",
    "typescript": "^5.0.0"
  },
  "funding": {
    "type": "donate",
    "url": "https://www.paypal.me/kirilvatev"
  }
}
