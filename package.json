{
  "name": "@fewell/canvas-confetti-ts",
  "version": "1.0.0",
  "description": "A TypeScript-first fork of canvas-confetti with modern ES module support",
  "main": "./dist/bundles/canvas-confetti-ts.umd.js",
  "module": "./dist/fesm2020/canvas-confetti-ts.mjs",
  "es2020": "./dist/fesm2020/canvas-confetti-ts.mjs",
  "esm2020": "./dist/esm2020/canvas-confetti-ts.mjs",
  "fesm2020": "./dist/fesm2020/canvas-confetti-ts.mjs",
  "typings": "./dist/types/confetti.d.ts",
  "exports": {
    "./package.json": {
      "default": "./package.json"
    },
    ".": {
      "types": "./dist/types/confetti.d.ts",
      "esm2020": "./dist/esm2020/canvas-confetti-ts.mjs",
      "es2020": "./dist/fesm2020/canvas-confetti-ts.mjs",
      "es2015": "./dist/fesm2015/canvas-confetti-ts.mjs",
      "node": "./dist/bundles/canvas-confetti-ts.umd.js",
      "default": "./dist/bundles/canvas-confetti-ts.umd.js"
    }
  },
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "npm run build:esm && npm run build:umd",
    "build:esm": "tsc -p tsconfig.json && rollup -c rollup.config.js",
    "build:umd": "webpack --config webpack.config.js",
    "dev": "tsc -p tsconfig.json -w",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "@angular/core": ">=14.0.0"
  },
  "devDependencies": {
    "@angular/core": "^14.0.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "rimraf": "^5.0.0",
    "rollup": "^2.79.1",
    "rollup-plugin-typescript2": "^0.34.1",
    "terser-webpack-plugin": "^5.3.9",
    "ts-loader": "^9.5.1",
    "typescript": "~4.9.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "keywords": [
    "canvas",
    "confetti",
    "typescript",
    "animation",
    "angular",
    "esm",
    "modules"
  ],
  "author": {
    "name": "fewell",
    "url": "https://github.com/fewell"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fewell/canvas-confetti-ts.git"
  }
}
